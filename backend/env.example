# Database Configuration
DATABASE_URL=postgresql://fintech_user:fintech_pass@localhost:5432/fintech_escrow
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-super-secure-secret-key-here-change-in-production
BCRYPT_ROUNDS=12
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Twilio Configuration (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Configuration (Email)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@fintech-escrow.com

# Firebase Configuration (Push Notifications)
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json

# Truora Configuration (Identity Verification)
TRUORA_API_KEY=your_truora_api_key_here
TRUORA_BASE_URL=https://api.truora.com

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=true

# Development
DEBUG=true
ENVIRONMENT=development
