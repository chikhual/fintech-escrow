{
  "name": "fintech-escrow-tests",
  "version": "1.0.0",
  "description": "Automated browser tests for FinTech ESCROW Platform",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:auth": "playwright test --grep @auth",
    "test:escrow": "playwright test --grep @escrow",
    "test:payment": "playwright test --grep @payment",
    "test:dispute": "playwright test --grep @dispute",
    "test:admin": "playwright test --grep @admin",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:performance": "playwright test --grep @performance",
    "test:security": "playwright test --grep @security",
    "test:mobile": "playwright test --project=mobile",
    "test:desktop": "playwright test --project=desktop",
    "test:api": "jest --testPathPattern=api",
    "test:integration": "jest --testPathPattern=integration",
    "test:all": "npm run test:api && npm run test:integration && npm run test",
    "test:ci": "playwright test --reporter=html,json",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1",
    "test:retry": "playwright test --retries=3",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:codegen": "playwright codegen",
    "test:trace": "playwright test --trace=on",
    "test:video": "playwright test --video=on",
    "test:screenshot": "playwright test --screenshot=on",
    "test:coverage": "playwright test --coverage",
    "test:load": "artillery run load-tests/load-test.yml",
    "test:stress": "artillery run load-tests/stress-test.yml",
    "test:spike": "artillery run load-tests/spike-test.yml",
    "test:volume": "artillery run load-tests/volume-test.yml"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "fintech",
    "escrow",
    "e2e",
    "browser"
  ],
  "author": "FinTech ESCROW Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "artillery": "^2.0.0",
    "newman": "^6.0.0",
    "newman-reporter-html": "^1.0.5",
    "allure-playwright": "^2.10.0",
    "playwright-test-coverage": "^0.1.0",
    "dotenv": "^16.3.1",
    "faker": "^6.6.6",
    "moment": "^2.29.4",
    "crypto": "^1.0.1",
    "axios": "^1.6.0",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1"
  },
  "dependencies": {
    "playwright": "^1.40.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/api/**/*.test.ts",
      "**/tests/integration/**/*.test.ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}